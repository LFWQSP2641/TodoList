<UserControl
    x:Class="TodoList.Views.TodoEditorView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:TodoList.ViewModels"
    xmlns:vm="using:TodoList.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="viewModels:TodoEditorViewModel"
    mc:Ignorable="d">
    <Design.DataContext>
        <viewModels:TodoEditorViewModel />
    </Design.DataContext>

    <DockPanel>
        <StackPanel
            HorizontalAlignment="Center"
            DockPanel.Dock="Bottom"
            Orientation="Horizontal">
            <Button Command="{Binding SaveCommand}" Content="确定" />
            <Button Command="{Binding CancelCommand}" Content="取消" />
        </StackPanel>
        <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto">
            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                VerticalAlignment="Center"
                Text="标题" />
            <TextBox
                Grid.Row="0"
                Grid.Column="1"
                Width="200"
                VerticalAlignment="Center"
                Text="{Binding Title}" />
            <TextBlock
                Grid.Row="1"
                Grid.Column="0"
                VerticalAlignment="Center"
                Text="说明" />
            <TextBox
                Grid.Row="1"
                Grid.Column="1"
                Width="400"
                Height="100"
                VerticalAlignment="Center"
                AcceptsReturn="True"
                Text="{Binding Description}" />
        </Grid>
    </DockPanel>
</UserControl>
